{
  "name": "git-djit",
  "productName": "git-djit",
  "version": "0.1.0",
  "description": "Experimental Git GUI",
  "main": "src/main/index.ts",
  "scripts": {
    "start": "electron-forge start -l",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "npm run lint-main && npm run lint-renderer",
    "lint-main": "tslint -c src/tslint.json -p src/main/tsconfig.json --type-check --force",
    "lint-renderer": "tslint -c src/tslint.json -p src/renderer/tsconfig.json --type-check --force",
    "build": "tsc -p src/main/tsconfig.json && tsc -p src/renderer/tsconfig.json",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enlight/git-djit.git"
  },
  "keywords": [
    "git",
    "gui"
  ],
  "author": "Vadim Macagon <vadim.macagon@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enlight/git-djit/issues"
  },
  "homepage": "https://github.com/enlight/git-djit#readme",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "git_djit"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "gitdjit"
      }
    }
  },
  "dependencies": {
    "@phosphor/widgets": "^1.5.0",
    "electron-compile": "^6.4.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "@types/react-hot-loader": "^3.0.4",
    "electron": "1.7.6",
    "electron-forge": "^3.2.0",
    "electron-prebuilt-compile": "1.7.6",
    "prettier": "1.6.0",
    "tslint": "5.7.0",
    "tslint-config-prettier": "1.4.0",
    "tslint-react": "3.2.0",
    "typescript": "^2.4.2"
  }
}
